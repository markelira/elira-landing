# ============================================
# ELIRA PLATFORM - FRONTEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: Never commit .env.local with real credentials to git

# ============================================
# FIREBASE CLIENT SDK (Public - Safe to expose)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# FIREBASE EMULATORS (Development Only)
# ============================================
# Set to 'true' to use Firebase emulators in development
NEXT_PUBLIC_USE_FIREBASE_EMULATORS=false

# ============================================
# APPLICATION URLS
# ============================================
# Production: https://elira.hu
# Development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000

# ============================================
# STRIPE PAYMENTS (Public Key)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Default Stripe Price ID for courses
NEXT_PUBLIC_STRIPE_DEFAULT_PRICE_ID=

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable subscription features
NEXT_PUBLIC_FEATURE_SUBSCRIPTION=false

# ============================================
# ANALYTICS & TRACKING
# ============================================
# Google Analytics Measurement ID (e.g., G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=

# Google Tag Manager ID (e.g., GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=

# ============================================
# ERROR TRACKING - SENTRY
# ============================================
# Get from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# ============================================
# MUX VIDEO (Playback Signing - Optional)
# ============================================
# For signed playback URLs (optional, enhances security)
MUX_SIGNING_KEY=
MUX_SIGNING_KEY_ID=

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
